<UserControl x:Class="MusRoyalePC.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800" Background="#0B2315">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="FriendsColumn" Width="250"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Border Background="#07190F" BorderBrush="#1A3325" BorderThickness="0,0,1,0">
			<DockPanel>
				<TextBlock Text="TUS AMIGOS" Margin="15" Foreground="#D4AF37" FontWeight="Bold" />
				<ListBox x:Name="lstFriends" Background="Transparent" BorderThickness="0"
                         SelectionChanged="lstFriends_SelectionChanged">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Margin="5">
								<Grid>
									<Ellipse Width="40" Height="40" Stroke="#D4AF37" StrokeThickness="1">
										<Ellipse.Fill>
											<ImageBrush ImageSource="{Binding AvatarPath}"/>
										</Ellipse.Fill>
									</Ellipse>
									<Ellipse Width="10" Height="10" Fill="LimeGreen" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                             Visibility="{Binding IsOnlineVisibility}"/>
								</Grid>
								<TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="10,0" Foreground="White"/>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</DockPanel>
		</Border>

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<Border Background="#122E1E" Padding="10">
				<StackPanel Orientation="Horizontal">
					<Button Content="☰" x:Name="btnToggleFriends" Click="btnToggleFriends_Click"
                            Background="Transparent" Foreground="White" BorderThickness="0" FontSize="18"/>
					<TextBlock x:Name="txtChatTitle" Text="Selecciona un amigo" Foreground="White"
                               FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
				</StackPanel>
			</Border>

			<ScrollViewer Grid.Row="1" x:Name="scrollChat" VerticalScrollBarVisibility="Auto">
				<ItemsControl x:Name="chatItems">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border CornerRadius="10" Padding="10" Margin="10,5" MaxWidth="350"
                                    HorizontalAlignment="{Binding Alignment}"
                                    Background="{Binding BubbleColor}">
								<StackPanel>
									<TextBlock Text="{Binding Message}" Foreground="White" TextWrapping="Wrap"/>
									<TextBlock Text="{Binding Time}" FontSize="9" Foreground="#CCC"
                                               HorizontalAlignment="Right" Margin="0,5,0,0"/>
								</StackPanel>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>

			<Border Grid.Row="2" Background="#122E1E" Padding="15">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<TextBox x:Name="txtInput" Background="#1A3325" Foreground="White"
                             BorderThickness="0" Padding="10" KeyDown="txtInput_KeyDown"
                             VerticalContentAlignment="Center" CaretBrush="White"/>
					<Button Grid.Column="1" Content="➤" Click="btnSend_Click" Width="50"
                            Background="Transparent" BorderThickness="0" Foreground="#D4AF37" FontSize="20"/>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</UserControl>