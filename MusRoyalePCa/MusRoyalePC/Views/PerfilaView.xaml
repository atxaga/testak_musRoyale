<UserControl x:Class="MusRoyalePC.Views.PerfilaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="600" Height="700" >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

		<Ellipse Width="120" Height="120" Stroke="#FFD700" StrokeThickness="4" Margin="0,0,0,-40" Panel.ZIndex="1">
			<Ellipse.Fill>
				<ImageBrush x:Name="imgavatar" Stretch="UniformToFill" />
			</Ellipse.Fill>
		</Ellipse>

        <Border Grid.Row="1" Background="#FFF9E6" CornerRadius="30" Padding="20,50,20,20" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="JOKATUTAKOAK" FontSize="10" FontWeight="Bold" Foreground="#666" HorizontalAlignment="Center"/>
                    <TextBlock Text="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="DIRUA" FontSize="10" FontWeight="Bold" Foreground="#666" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtdirua" FontSize="20" FontWeight="Bold" Foreground="#B8860B" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,15,0,0">
                    <TextBlock Text="IRABAZIAK" FontSize="10" FontWeight="Bold" Foreground="Green" HorizontalAlignment="Center"/>
                    <TextBlock Text="85" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,15,0,0">
                    <TextBlock Text="GALDUAK" FontSize="10" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center"/>
                    <TextBlock Text="57" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#FFF9E6" CornerRadius="30" Padding="20">
            <StackPanel>
                <TextBlock Text="Izena" Margin="10,0,0,2" FontSize="12" Foreground="#888"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,0,0,15">
                    <TextBox x:Name="izena" BorderThickness="0" Background="Transparent" FontSize="16"/>
                </Border>

                <TextBlock Text="Email" Margin="10,0,0,2" FontSize="12" Foreground="#888"/>
                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,0,0,15">
                    <TextBox x:Name="txtemail" BorderThickness="0" Background="Transparent" FontSize="14"/>
                </Border>

                <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="10" Padding="10">
                    <Grid>
                        <PasswordBox x:Name="pasahitza" BorderThickness="0" Background="Transparent"/>
                        <TextBlock Text="👁" HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="Hand"/>
                    </Grid>
                </Border>
            </StackPanel>
			
        </Border>

        <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="GORDE PROFILA" Background="#333" Foreground="White" Height="50" Margin="0,0,0,10" Click="Button_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="HARPIDETU (PREMIUM)" Background="#6200EE" Foreground="White" Height="50">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
			<TextBlock x:Name="txtSuccess"
                       Text="Datuak ondo gorde dira! (Datos guardados)"
                       Foreground="LimeGreen"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       FontWeight="Bold"
                       Visibility="Collapsed"/>

			<TextBlock x:Name="txtError"
                       Text="Errorea gertatu da datuak gordetzean."
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       FontWeight="Bold"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</UserControl>